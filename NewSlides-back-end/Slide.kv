<Slide>
    id: slide
    GridLayout:
        cols: 2
        size: root.width, root.height
        Image:
            id: Background
            source: 'images\MLG_Glasses.png'
        GridLayout:
            rows: 4
            orientation: 'tb-rl'
            Button:
                text: 'AddText'
                on_press:
                    root.AddText()
            Button:
                text: 'Save'
                on_press:
                    root.save()
            TextInput:
                id: FontSize
                text: '12'
            FileChooserIconView:
                id: filechooser
                on_selection: slide.loadImage(filechooser.selection)
